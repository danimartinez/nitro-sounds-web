---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Music from '../components/Music.astro';
import Gigs from '../components/Gigs.astro';
import Contact from '../components/Contact.astro';

// Page Metadata
const title = "Nitro sounds | House Music Artist";
const description = "Official website of Nitro sounds. Listen to the latest mixes, check upcoming gigs, and book for events.";
---

<Layout title={title} description={description}>
	<main>
		<Hero />
		<About />
		<Music />
		<Gigs />
		<Contact />
	</main>
	
	<footer class="site-footer">
		<p>&copy; {new Date().getFullYear()} Nitro sounds. All rights reserved.</p>
	</footer>
</Layout>

<style>
	.site-footer {
		text-align: center;
		padding: 2rem;
		background: rgba(0,0,0,0.5);
		color: rgba(255,255,255,0.4);
		font-size: 0.9rem;
	}
</style>
