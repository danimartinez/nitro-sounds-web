---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Music from '../components/Music.astro';
import Gigs from '../components/Gigs.astro';
import Contact from '../components/Contact.astro';

// Page Metadata
const title = "Nitro Sounds | House music";
const description = "Nitro Sounds. Pàgina web de Nitro sounds amb informació de música, events i contractació";
---

<Layout title={title} description={description}>
	<main>
		<Hero />
		<About />
		<section class="music-gigs-row">
			<div class="container">
				<div class="two-col-grid">
					<Music />
					<Gigs />
				</div>
			</div>
		</section>
		<Contact />
	</main>
	
	<footer class="site-footer">
		<p>&copy; {new Date().getFullYear()} Nitro sounds. All rights reserved.</p>
	</footer>
</Layout>

<style>
	.music-gigs-row {
		padding: 8rem 0;
	}

	.two-col-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: start;
	}

	@media (max-width: 900px) {
		.two-col-grid {
			grid-template-columns: 1fr;
		}
	}

	.site-footer {
		text-align: center;
		padding: 2rem;
		background: rgba(0,0,0,0.5);
		color: rgba(255,255,255,0.4);
		font-size: 0.9rem;
	}
</style>
