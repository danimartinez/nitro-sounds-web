---
import { Image } from 'astro:assets';
import Socials from './Socials.astro';
import heroBg from '../assets/images/SnoozParties_ClosingSeason_DSC3038.jpg';
import heroLogo from '../assets/images/hero-logo.png';
---

<section id="home" class="hero">
  <div class="hero-bg-wrapper">
    <Image 
      src={heroBg} 
      alt="Nitro DJ Set Live" 
      class="hero-bg-img"
      quality="80"
      format="webp"
      loading="eager"
    />
  </div>

  <div class="hero-overlay"></div>

  <div class="hero-content animate-fade-in">
    <div class="logo-wrapper">
        <Image 
          src={heroLogo} 
          alt="Nitro Sounds" 
          class="hero-logo" 
          width={600} 
          loading="eager" 
        />
    </div>
    
    <p class="tagline">House Music. All Night Long.</p>
    
    <div class="cta-container">
      <a href="#contact" class="btn btn-secondary">Book Now</a>
    </div>

    <div class="hero-socials">
        <Socials />
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-bg-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }

  .hero-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(10,10,10,0.3), var(--color-bg));
    z-index: -1;
  }

  .hero-content {
    z-index: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1200px;
  }

  .logo-wrapper {
      margin-bottom: 1rem;
      max-width: 800px;
      width: 100%;
      display: flex;
      justify-content: center;
  }

  .hero-logo {
      width: 100%;
      height: auto;
      max-width: 450px; /* Reduced from 600px to avoid covering face */
      /* White glow effect as requested */
      filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.6));
  }

  .tagline {
    font-size: 1.5rem;
    color: rgba(255,255,255,0.9);
    margin-bottom: 2.5rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 300;
  }

  .cta-container {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .hero-socials {
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .hero-logo {
      max-width: 80%;
    }
    
    .tagline {
      font-size: 1.1rem;
    }
  }
</style>
